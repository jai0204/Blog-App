<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Blog App</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css">
    <link rel="stylesheet" href="/css/app.css">
  </head>
  <body>
    <div class="ui fixed inverted menu">
      <div class="ui container">
        <div class="header item"><i class="power off icon"></i>Blog</div>
        <a href="/" class="item">Home</a>
        <a href="/blogs/new" class="item">New Post</a>
        <div class="right menu">
          <% if (!currentUser) { %>
          <a href="/login" class="item">Login</a>
          <a href="/register" class="item">Sign Up</a>
          <% } else { %>
          <a class="item"><%= currentUser.username %></a>
          <a href="/logout" class="item">Logout</a>
          <% } %>
        </div>
      </div>
    </div>
    <% if (error && error.length > 0) { %>
    <div class="ui negative message container" role="alert">
      <p><%= error %></p>
    </div>
    <% } %>
    <% if (success && success.length > 0) { %>
    <div class="ui positive message container" role="alert">
      <p><%= success %></p>
    </div>
    <% } %>
