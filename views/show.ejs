<%- include("partials/header") %>
    <div class="ui main text container segment">
      <div class="ui huge centered header"><a><%= blog.title %></a></div>
      <div class="ui top attached">
        <div class="item">
           <img class="ui centered rounded image" src="<%= blog.image %>" alt="Blog image">
           <div class="ui description segment">
              <p><%- blog.body %></p>
           </div>
           <div class="content">
             <span><%= blog.created.toDateString() %></span>
           </div>
           <div class="">
             <p>
               <em>Posted by <%= blog.author.username %></em>
             </p>
             <% if (currentUser && blog.author.id.equals(currentUser._id)) { %>
             <a class="ui inverted orange small button" href="/blogs/<%= blog._id %>/edit">Edit</a>
             <form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="post">
                <button class="ui inverted red small button">Delete</button>
             </form>
             <% } %>
           </div>
        </div>
      </div>
    </div>
<%- include("partials/footer") %>
